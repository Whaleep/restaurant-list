<div class="container">
  <div class="row">
    <div class="col-md-6 m-auto">
      <div class="card card-body users-bar">
        <h1 class="text-center mt-3">Register</h1>

        <form action="/users/register" method="POST">
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{ name }}">
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" value="{{ email }}">
          </div>

          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" value="{{ Password }}">
          </div>

          <div class="mb-3">
            <label for="confirmPassword" class="form-label">Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Confirm Password" value="{{ confirmPassword }}">
          </div>

          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Register</button>
          </div>
        </form>

        <p class="lead mt-4">
          Have An Account? <a href="/users/login">Login</a>
        </p>

      </div>
    </div>
  </div>
</div>